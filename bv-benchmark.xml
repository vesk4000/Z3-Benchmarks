<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.18//EN" "https://www.sosy-lab.org/benchexec/benchmark-1.18.dtd">
<benchmark tool="z3" displayName="Z3 QF_BV benchmark" timelimit="60s" memlimit="4GB">

  <description>Concrete QF_BV benchmark for Z3</description>

  <!-- Files copied into run directory -->
  <requiredfiles>
    <include>/benchmarks/QF_BV/*.smt2</include>
  </requiredfiles>

  <!-- No extra log or result files -->
  <logfiles/>
  <resultfiles/>

  <!-- Run Z3 on SMT2 files -->
  <rundefinition name="z3-smt2">
    <option name="-smt2"/>
  </rundefinition>

  <!-- Task set: all .smt2 in QF_BV -->
  <tasks name="QF_BV">
    <include>/benchmarks/QF_BV/*.smt2</include>
  </tasks>

</benchmark>