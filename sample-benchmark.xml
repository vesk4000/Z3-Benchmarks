<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.18//EN" "https://www.sosy-lab.org/benchexec/benchmark-1.18.dtd">
<benchmark tool="z3" displayName="Z3 QF_LIA example" timelimit="60s" memlimit="4GB">

  <description>Simple QF_LIA example for Z3</description>
  <!-- Input files to run -->
  <requiredfiles>
    <include>datasets/QF_LIA/*.smt2</include>
  </requiredfiles>
  <!-- No extra log or result files -->
  <logfiles/>
  <resultfiles/>
  <!-- Expected result for scoring -->
  <propertyfile name="datasets/QF_LIA/example1.prop"/>

  <!-- Run Z3 on SMT2 files -->
  <rundefinition name="z3-smt2">
    <option name="-smt2"/>
  </rundefinition>

  <!-- Task set: all .smt2 in QF_LIA -->
  <tasks name="QF_LIA">
    <include>datasets/QF_LIA/*.smt2</include>
  </tasks>

</benchmark>