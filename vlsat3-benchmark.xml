<?xml version="1.0"?>
<!DOCTYPE benchmark PUBLIC "+//IDN sosy-lab.org//DTD BenchExec benchmark 1.18//EN" "https://www.sosy-lab.org/benchexec/benchmark-1.18.dtd">
<benchmark tool="z3" displayName="VLSAT3 QF_BV Benchmark" timelimit="180s" memlimit="1GB">

  <description>Compare Z3 default vs. int-blast on full VLSAT3 QF_BV</description>

  <requiredfiles>
    <!-- QF_BV families a and g -->
    <!-- <include>./datasets/VLSAT3/cadp.inria.fr/ftp/benchmarks/vlsat/*.smt2</include> -->
    <include>./datasets/QF_LIA/example1.smt2</include>
  </requiredfiles>

  <logfiles/>
  <resultfiles/>

  <rundefinition name="z3-smt2">
    <option name="-smt2"/>
  </rundefinition>
  <rundefinition name="z3-int-blast">
    <option name="-smt2"/>
    <option name="sat.smt=true"/>
    <option name="smt.bv.solver=2"/>
  </rundefinition>

  <tasks name="VLSAT3 QF_BV">
    <!-- <include>./datasets/VLSAT3/cadp.inria.fr/ftp/benchmarks/vlsat/vlsat3_a00.smt2</include> -->
    <include>./datasets/QF_LIA/example1.smt2</include>
  </tasks>

</benchmark>